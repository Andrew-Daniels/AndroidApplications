<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_Custom</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Custom</item>
        <item name="colorAccent">@color/colorAccent_Custom</item>
    </style>

    <style name="RadioButton_Standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RadioGroup_Standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextView_Standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="ImageView_Standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_vertical</item>
    </style>

    <style name="FrameLayout_Standard">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@android:color/background_dark</item>
    </style>

    <style name="FrameLayout_Standard.Landscape">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">275dp</item>
    </style>

    <style name="EditText_Standard">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="Switch_Standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/textStyle_label</item>
    </style>

    <style name="LinearLayout_Standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="LinearLayout_Standard.Landscape">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="TextStyle_On">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle_Off">
        <item name="android:textStyle">normal</item>
    </style>
</resources>
